[main]
[% # is enabled (or whole configuration) is missing, disable this plugin 
    CCM.contents.enabled.defined ? '' : 'enabled=0' %]
[% FOREACH pair IN CCM.contents.pairs -%]
[%      pair.key %]=
[%-     SWITCH pair.key -%]
[%-         CASE 'always_print_best_host' -%]
[%-             pair.value ? 'true' : 'false' -%]
[%-         CASE -%]
[%-             CCM.is_list(pair.value) ? pair.value.join(',') : pair.value -%]
[%-     END %]
[% END %]
